<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErgastAPP.Views.DriversPage"
             Title="{Binding Title}">

    <StackLayout Style="{StaticResource MainLayout}">
        
        <StackLayout>

            <SearchBar x:Name="searchBar"
                       Placeholder="Search drivers"
                       TextChanged="SearchBar_TextChanged" />

            <StackLayout Orientation="Horizontal">
            
                <Picker x:Name="pickerYear"
                        Title="Year"
                        ItemsSource="{Binding Years}"
                        SelectedIndexChanged="PickerYear_SelectedIndexChanged" />
                <Picker x:Name="pickerRound"
                        Title="Round"
                        ItemsSource="{Binding Rounds}"
                        SelectedIndexChanged="PickerRound_SelectedIndexChanged" />
            </StackLayout>

            <Label x:Name="labelRace"
                   HorizontalTextAlignment="Center"
                   Margin="10"
                   Text="{Binding Racename}"
                   TextColor="{StaticResource BackgroundWhite}"
                   FontSize="18" />
        
        </StackLayout>

        <ListView x:Name="ItemsListView"
                  ItemsSource="{Binding Items}"
                  VerticalOptions="FillAndExpand"
                  HasUnevenRows="true"
                  RefreshCommand="{Binding LoadItemsCommand}"
                  IsPullToRefreshEnabled="true"
                  IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                  CachingStrategy="RecycleElement"
                  ItemSelected="OnItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Fullname}"
                                   LineBreakMode="NoWrap"
                                   Style="{StaticResource LabelListItemHeader}"/>

                            <StackLayout Orientation="Horizontal">

                                <Image Source="{Binding Flag}"
                                       Style="{StaticResource ImageFlag}"
                                       HorizontalOptions="Start" />

                                <Label Text="{Binding Nationality}"
                                       LineBreakMode="NoWrap"
                                       Style="{StaticResource LabelListItemDetails}"
                                       HorizontalOptions="Start" />

                            </StackLayout>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>