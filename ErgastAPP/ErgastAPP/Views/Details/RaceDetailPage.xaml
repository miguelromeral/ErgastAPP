<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ErgastAPP.Views.RaceDetailPage"
             Title="{Binding Title}">

    <StackLayout Style="{StaticResource MainLayout}">
    
    <ScrollView>
            <StackLayout>

                <StackLayout Style="{StaticResource SectionLayout}">

                    <Label Style="{StaticResource SectionHeader}"
                           Text="GRAND PRIX INFO" />

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="NAME"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Name}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="DATE"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.PrettyDate}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="CIRCUIT"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Button Text="{Binding Race.Circuit.Name}"
                                    Clicked="Circuit_Clicked"
                                    Style="{StaticResource ButtonTransparent}"
                                    Grid.Column="1" />

                        </Grid>
                    </StackLayout>
                </StackLayout>

                <StackLayout Style="{StaticResource SectionLayout}">

                    <Label Style="{StaticResource SectionHeader}"
                           Text="RACE" />

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="1º"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Winner.Driver.Fullname}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Winner.Constructor.Name}"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_Info}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="2º"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Second.Driver.Fullname}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Second.Constructor.Name}"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_Info}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="3º"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Third.Driver.Fullname}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Third.Constructor.Name}"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_Info}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Text="FULL RESULTS"
                                    Clicked="Results_Clicked"
                                    Style="{StaticResource ButtonMark}"
                                    HorizontalOptions="FillAndExpand"
                                    Grid.Column="1" />
                            
                        </Grid>
                    </StackLayout>

                    

                    

                </StackLayout>

                <StackLayout Style="{StaticResource SectionLayout}"
                             x:Name="layoutQualifying">

                    <Label Style="{StaticResource SectionHeader}"
                           Text="QUALIFYING" />

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Label Text="1º"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Qualy_First.Driver.Fullname}"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Qualy_First.Constructor.Name}"
                                   Grid.Row="0"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_MoreInfo}" />

                            <Label Text="{Binding Race.Qualy_First.Q3}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_MoreInfo}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Label Text="2º"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Qualy_Second.Driver.Fullname}"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Qualy_Second.Constructor.Name}"
                                   Grid.Row="0"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_MoreInfo}" />

                            <Label Text="{Binding Race.Qualy_Second.Q3}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_MoreInfo}" />

                        </Grid>
                    </StackLayout>
                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Label Text="3º"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Header}" />

                            <Label Text="{Binding Race.Qualy_Third.Driver.Fullname}"
                                   Grid.Row="0"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.Qualy_Third.Constructor.Name}"
                                   Grid.Row="0"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_MoreInfo}" />

                            <Label Text="{Binding Race.Qualy_Third.Q3}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_MoreInfo}" />

                        </Grid>
                    </StackLayout>

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Text="FULL QUALYFING"
                                    Clicked="Qualy_Clicked"
                                    Style="{StaticResource ButtonMark}"
                                    HorizontalOptions="FillAndExpand"
                                    Grid.Column="1" />

                        </Grid>
                    </StackLayout>
                </StackLayout>

                <StackLayout Style="{StaticResource SectionLayout}">

                    <Label Style="{StaticResource SectionHeader}"
                           Text="FASTEST LAP" />

                    <StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Race.FastestLap.Driver.Fullname}"
                                   Grid.Column="0"
                                   Style="{StaticResource Details_Info}" />

                            <Label Text="{Binding Race.FastestLap.Constructor.Name}"
                                   Grid.Column="1"
                                   Style="{StaticResource Details_MoreInfo}" />

                            <Label Text="{Binding Race.FastestLap.FastestLap.PrettyTime}"
                                   Grid.Column="2"
                                   Style="{StaticResource Details_MoreInfo}" />

                        </Grid>
                    </StackLayout>
                </StackLayout>

                

                

                <StackLayout Style="{StaticResource SectionLayout}">

                    <Label Style="{StaticResource SectionHeader}"
                           Text="STANDINGS" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <Button Text="DRIVERS"
                                Clicked="DriverStandings_Clicked"
                                Style="{StaticResource ButtonMark}"
                                Grid.Column="0"
                                HorizontalOptions="FillAndExpand" />

                        <Button Text="CONSTRUCTORS"
                                Clicked="ConstructorStandings_Clicked"
                                Style="{StaticResource ButtonMark}"
                                HorizontalOptions="FillAndExpand"
                                Grid.Column="1" />

                    </Grid>
                </StackLayout>

                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Text="SHOW REPORT"
                                Clicked="ReportButton_Clicked"
                                Style="{StaticResource ButtonMark}"
                                Grid.Column="1" />

                    </Grid>
                </StackLayout>

            </StackLayout>
        </ScrollView>

    </StackLayout>

</ContentPage>